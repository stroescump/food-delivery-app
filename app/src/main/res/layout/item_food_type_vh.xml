<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_marginHorizontal="@dimen/dimen_10dp"
    android:background="@drawable/food_type_item_bg_unselected">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/foodName"
        style="@style/TextView.SmallPrint.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:textColor="@color/dirty_white"
        app:layout_constraintEnd_toEndOf="@id/foodImage"
        app:layout_constraintStart_toStartOf="@id/foodImage"
        app:layout_constraintTop_toBottomOf="@id/foodImage"
        tools:text="Burger" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/foodImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@drawable/food_type_item_shadow_unselected"
        android:padding="@dimen/dimen_15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_burger" />


</androidx.constraintlayout.widget.ConstraintLayout>