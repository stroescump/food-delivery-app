<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoodDelivery" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dirty_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue_bg</item>
        <item name="android:windowBackground">@color/dark_blue_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.FoodDelivery.Full" parent="">
        <item name="android:background">@drawable/button_bg_full</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingVertical">@dimen/dimen_15dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/creato_display_extra_bold</item>
    </style>

    <style name="Button.FoodDelivery.Outline" parent="">
        <item name="android:background">@drawable/button_bg_outline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/crazy_green</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingVertical">@dimen/dimen_15dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/creato_display_extra_bold</item>
    </style>

    <style name="TextView.SmallPrint.ExtraBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_extra_bold</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="TextView.SmallPrint.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_bold</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="TextView.SmallPrint.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_regular</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="TextView.SmallPrint.Light" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_light</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="TextView.MediumPrint" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_bold</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="TextView.BigPrint" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/creato_display_extra_bold</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="EditText.Form" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:fontFamily">@font/creato_display_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CurvedImageView">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Chart3AxisStyle">
        <item name="showTitle">true</item>
    </style>

    <style name="Chart3AxisTitleStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="typeface">sans</item>
    </style>

    <style name="Chart.Revenue" parent="">
        <item name="showGuideline">false</item>
        <item name="line1Spec">@style/LineChartStyleRevenue</item>
        <item name="chartZoomEnabled">true</item>
    </style>

    <style name="AxisStyle">
        <item name="axisLineStyle">@style/Line1AxisLineStyle</item>
        <item name="axisGuidelineStyle">@style/Line1AxisLineStyle</item>
        <item name="axisTickStyle">@style/Line1AxisLineStyle</item>
        <item name="axisTickLength">@dimen/dimen_10dp</item>
        <item name="showGuideline">true</item>
        <item name="showTick">false</item>
        <item name="axisLabelStyle">@style/VerticalAxisLabelStyle</item>
    </style>

    <style name="Line1AxisLineStyle">
        <item name="color">@color/dark_gray_3</item>
    </style>

    <style name="VerticalAxisLabelStyle">
        <item name="labelColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/creato_display_regular</item>
    </style>

    <style name="LineChartStyleRevenue">
        <item name="color">@color/crazy_green</item>
        <item name="cubicStrength">30%</item>
        <item name="gradientTopColor">@color/crazy_green</item>
        <item name="gradientBottomColor">@android:color/transparent</item>
    </style>


</resources>